<script>
    $(function () {
        $('.nav-toggler').click(function () {
            $('aside').toggleClass('js-aside-toggled');
            $('.toolbar').toggleClass('js-toolbar-right');
            $('.content').toggleClass('js-content');
        })
    })
</script>
