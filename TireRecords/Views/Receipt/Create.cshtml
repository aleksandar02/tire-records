@model TireRecords.Models.ClientAndVehicleViewModel

@{
    ViewBag.Title = "Create";
}

@{
    var client = Model.Client;
    var vehicle = Model.Vehicle;
}

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @*<link href="~/Content/bootstrap-select.min.css" rel="stylesheet" />

    <script src="~/Scripts/bootstrap-select.min.js"></script>*@

    <script src="~/Scripts/createReceipt.js"></script>

    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/validateReceipt.js"></script>
}

@{
    string vehicleType = "";

    if (TempData.ContainsKey("VehicleType"))
    {
        vehicleType = Convert.ToString(TempData["VehicleType"]);
    }
}

<div class="content">
    <div class="container-fluid">
        <h1 class="page-heading">Nova priznanica</h1>

        <form action="/Receipt/Create" id="createReceiptForm" method="post">
            <div class="form-section form-section-client">
                <h4 class="form-heading"><i class="fa fa-user"></i>&nbsp;Klijent</h4>
                <div class="row">
                    <div class="col-md-3">
                        <input type="text" id="firstName" name="firstName" class="form-control" value="@client.FirstName" placeholder="Ime" required />
                    </div>
                    <div class="col-md-3">
                        <input type="text" id="lastName" name="lastName" class="form-control" value="@client.LastName" placeholder="Prezime" />
                    </div>
                    <div class="col-md-3">
                        <input type="text" id="mobilePhone" name="mobilePhone" class="form-control" value="@client.MobilePhone" placeholder="Telefon" />
                    </div>
                    <div class="col-md-3">
                        <input type="text" id="email" name="email" class="form-control" value="@client.Email" placeholder="Email" />
                    </div>
                </div>
            </div>
            <div class="form-section form-section-vehicle">

                <h4 class="form-heading"><i class="fa fa-car"></i>&nbsp;Vozilo</h4>
                <div class="row">
                    <div class="col-md-3">
                        @if (vehicleType == "2")
                        {
                            <select name="vehicleType" class="form-control" id="vehicleType">
                                <option value="1">Putničko vozilo</option>
                                <option value="2" selected>Teretno vozilo</option>
                            </select>
                        }
                        else
                        {
                            <select name="vehicleType" class="form-control" id="vehicleType">
                                <option value="1" selected>Putničko vozilo</option>
                                <option value="2">Teretno vozilo</option>
                            </select>
                        }

                    </div>
                    <div class="col-md-3">
                        <select name="vehicleBrandPicker" class="selectpicker form-control show-tick" id="vehicleBrandPicker">
                            <option data-hidden="true">Marka</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <input type="text" id="registrationNumber" name="registrationNumber" class="form-control" value="@vehicle.RegistrationNumber" placeholder="Registarski broj" />
                    </div>
                </div>
            </div>
            <div class="form-section form-section-tires" id="tireSection">

                <div class="form-section-heading">
                    <h4 class="form-heading" style="line-height: 22px; margin: 8px 0;"><i class="fa fa-wrench"></i>&nbsp;Gume</h4>
                </div>
                <div class="row" id="plRow">
                    <div class="col-md-1">
                        <input type="text" id="positionPLText" name="positionPLText" class="form-control" readonly value="PL" />
                    </div>
                    <div class="col-md-2">
                        <input type="text" id="tireBrandPL" name="tireBrandPL" class="form-control" value="" placeholder="Marka" />
                    </div>
                    <div class="col-md-2">
                        <input type="text" id="tireModelPL" name="tireModelPL" class="form-control" value="" placeholder="Tip" />
                    </div>
                    <div class="col-md-2">
                        <input type="text" id="dimensionPL" name="dimensionPL" class="form-control" value="" placeholder="Dimenzija" />
                    </div>
                    <div class="col-md-2">
                        <input type="text" id="indexPL" name="indexPL" class="form-control" value="" placeholder="Index" />
                    </div>
                    <div class="col-md-1">
                        <input type="text" id="dotPL" name="dotPL" class="form-control" value="" placeholder="Dot" />
                    </div>
                    <div class="col-md-1">
                        <input type="text" id="depthPL" name="depthPL" class="form-control w-150" value="" placeholder="Dubina" />
                    </div>
                    <div class="col-md-1">
                        <button type="button" class="btn-plus pull-right copy-tire"><i class="fa fa-plus"></i></button>
                    </div>
                </div>
                <br />
                <div class="row" id="pdRow">
                    <div class="col-md-1">
                        <input type="text" id="positionPDText" name="positionPDText" class="form-control" readonly value="PD" />
                    </div>
                    <div class="col-md-2">
                        <input type="text" id="tireBrandPD" name="tireBrandPD" class="form-control" value="" placeholder="Marka" />
                    </div>
                    <div class="col-md-2">
                        <input type="text" id="tireModelPD" name="tireModelPD" class="form-control" value="" placeholder="Tip" />
                    </div>
                    <div class="col-md-2">
                        <input type="text" id="dimensionPD" name="dimensionPD" class="form-control" value="" placeholder="Dimenzija" />
                    </div>
                    <div class="col-md-2">
                        <input type="text" id="indexPD" name="indexPD" class="form-control" value="" placeholder="Index" />
                    </div>
                    <div class="col-md-1">
                        <input type="text" id="dotPD" name="dotPD" class="form-control" value="" placeholder="Dot" />
                    </div>
                    <div class="col-md-1">
                        <input type="text" id="depthPD" name="depthPD" class="form-control w-150" value="" placeholder="Dubina" />
                    </div>
                    <div class="col-md-1">
                        <button type="button" class="btn-plus pull-right copy-tire"><i class="fa fa-plus"></i></button>
                    </div>
                </div>
                <br />
                <div class="row" id="zlRow">
                    <div class="col-md-1">
                        <input type="text" id="positionZLText" name="positionZLText" class="form-control" readonly value="ZL" />
                    </div>
                    <div class="col-md-2">
                        <input type="text" id="tireBrandZL" name="tireBrandZL" class="form-control" value="" placeholder="Marka" />
                    </div>
                    <div class="col-md-2">
                        <input type="text" id="tireModelZL" name="tireModelZL" class="form-control" value="" placeholder="Tip" />
                    </div>
                    <div class="col-md-2">
                        <input type="text" id="dimensionZL" name="dimensionZL" class="form-control" value="" placeholder="Dimenzija" />
                    </div>
                    <div class="col-md-2">
                        <input type="text" id="indexZL" name="indexZL" class="form-control" value="" placeholder="Index" />
                    </div>
                    <div class="col-md-1">
                        <input type="text" id="dotZL" name="dotZL" class="form-control" value="" placeholder="Dot" />
                    </div>
                    <div class="col-md-1">
                        <input type="text" id="depthZL" name="depthZL" class="form-control w-150" value="" placeholder="Dubina" />
                    </div>
                    <div class="col-md-1">
                        <button type="button" class="btn-plus pull-right copy-tire"><i class="fa fa-plus"></i></button>
                    </div>
                </div>
                <br />
                <div class="row" id="zdRow">
                    <div class="col-md-1">
                        <input type="text" id="positionZDText" name="positionZDText" class="form-control" readonly value="ZD" />
                    </div>
                    <div class="col-md-2">
                        <input type="text" id="tireBrandZD" name="tireBrandZD" class="form-control" value="" placeholder="Marka" />
                    </div>
                    <div class="col-md-2">
                        <input type="text" id="tireModelZD" name="tireModelZD" class="form-control" value="" placeholder="Tip" />
                    </div>
                    <div class="col-md-2">
                        <input type="text" id="dimensionZD" name="dimensionZD" class="form-control" value="" placeholder="Dimenzija" />
                    </div>
                    <div class="col-md-2">
                        <input type="text" id="indexZD" name="indexZD" class="form-control" value="" placeholder="Index" />
                    </div>
                    <div class="col-md-1">
                        <input type="text" id="dotZD" name="dotZD" class="form-control" value="" placeholder="Dot" />
                    </div>
                    <div class="col-md-1">
                        <input type="text" id="depthZD" name="depthZD" class="form-control w-150" value="" placeholder="Dubina" />
                    </div>
                    <div class="col-md-1">
                        <button type="button" class="btn-plus pull-right copy-tire"><i class="fa fa-plus"></i></button>
                    </div>
                </div>
                <textarea placeholder="Napomena" name="message" id="message" class="form-control"></textarea>
            </div>

            <div class="pull-right">
                <button type="submit" class="btn btn-general btn-blue mt-10"><i class="fa fa-save"></i>&nbsp;&nbsp;Kreiraj priznanicu</button>
            </div>
        </form>

    </div>
</div>

<div class="modal fade" id="myModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Dodaj gumu</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-3">
                            <select class="form-control">
                                <option disabled selected value="">Pozicija</option>
                                <option value="PL">PL</option>
                                <option value="PD">PD</option>
                                <option value="ZL">ZL</option>
                                <option value="ZD">ZD</option>
                            </select>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-3">
                            <input class="form-control" type="text" placeholder="Marka" />
                        </div>
                        <div class="col-md-3">
                            <input class="form-control" type="text" placeholder="Model" />
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-3">
                            <input class="form-control" type="text" placeholder="Dimenzija" />
                        </div>
                        <div class="col-md-3">
                            <input class="form-control" type="text" placeholder="Index" />
                        </div>
                        <div class="col-md-3">
                            <input class="form-control" type="text" placeholder="Dot" />
                        </div>
                        <div class="col-md-3">
                            <input class="form-control" type="text" placeholder="Dubina" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-general btn-red">Dodaj</button>
                <button type="button" class="btn btn-general btn-default" data-dismiss="modal">Zatvori</button>
            </div>

        </div>
    </div>
</div>

<input type="hidden" id="vehicleBrandHidden" value="@vehicle.Brand" />


